{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
  <section>
    <div class="form">
      <h1 class="form__title">Create user</h1>
      <form method="POST" action="/user-create">
        <div class="form__content">
          <div class="form__field">
            <label for="email" class="form__lable">Email:</label>
            <input type="email" name="email" class="form__input">
          </div>
          <div class="form__field">
            <label for="login" class="form__lable">Login:</label>
            <input type="text" name="login" class="form__input">
          </div>
          <div class="form__field">
            <label for="password" class="form__lable">Password:</label>
            <input type="text" name="password" class="form__input">
          </div>
          <button class="form__button">Create</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">List users</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>Empty users list</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{email}} | {{login}}| {{id}} <a href="/user-delete?id={{id}}">(delete)</a></li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Update user email</h1>
      <form method="POST" action="/user-update">
        <div class="form__content">
          <div class="form__field">
            <label for="id" class="form__lable">ID</label>
            <input type="number" name="id" class="form__input">
          </div>
          <div class="form__field">
            <label for="email" class="form__lable">New email:</label>
            <input type="email" name="email" class="form__input">
          </div>
          <div class="form__field">
            <label for="password" class="form__lable">Password:</label>
            <input type="text" name="password" class="form__input">
          </div>
          <button class="form__button">Send</button>
        </div>
      </form>
    </div>
  </section>

</main>


