<main class="main">

    <div class="purchase">
        {{> purchase-heading title="Інформація про замовлення"}}

        {{#with data.purchase}}

        <div class="purchase-info">
            <div class="info-group info-group--vertical">
                <div class="info-group__title">ID:</div>
                <div>{{id}}</div>
            </div>
            <div class="info-group">
                <div>
                    <p class="info-group__title">Ім'я:</p>
                    <p>{{firstname}}</p>
                </div>
                <div>
                    <p class="info-group__title">Прізвище:</p>
                    <p>{{lastname}}</p>
                </div>
                <div>
                    <p class="info-group__title">Телефон:</p>
                    <p>{{phone}}</p>
                </div>
                <div>
                    <p class="info-group__title">Електронна пошта:</p>
                    <p>{{email}}</p>
                </div>
            </div>
            <div class="info-group info-group--vertical">

                <div class="info-group__title">Назва товару:</div>
                <div>{{product.title}}</div>

            </div>
            <div class="info-group">
                <div>
                    <p class="info-group__title">Вартість товарів:</p>
                    <p>{{productPrice}}₴</p>
                </div>
                <div>
                    <p class="info-group__title">Вартість доставки:</p>
                    <p>{{deliveryPrice}}₴</p>
                </div>
                <div>
                    <p class="info-group__title">Сума до сплати:</p>
                    <p>{{totalPrice}}₴</p>
                </div>
                <div>
                    <p class="info-group__title">Нараховані бонуси:</p>
                    <p>{{../data.bonus}}₴</p>
                </div>
            </div>
        </div>

        <a class="purchase-button" href="/purchase-edit?id={{id}}">{{>button text="Змінити дані"}}</a>
        {{/with}}

    </div>
</main>