}}

<main>

  <section>
    <div class="form">
      <h1 class="form__title">Edit Product</h1>
      <form method="POST" action="/product-edit">
        <fieldset>
          <legend class="form__name">Product information</legend>
          <div class="form__content">
            <div class="form__field">
              <div>
                <label for="name" class="form__label">Name:</label>
                <input type="text" name="name" id="name" class="form__input" value="{{product.name}}">
              </div>
              <div>
                <label for="price" class="form__label">Price:</label>
                <input type="number" name="price" id="price" class="form__input" value="{{product.price}}">
              </div>
              <div>
                <label for="id" class="form__label">ID:</label>
                <input type="number" name="id" id="id" class="form__input" value="{{product.id}}">
              </div>
            </div>
            <div class="form__field">
              <label for="description" class="form__label">Description:</label>
              <textarea name="description" id="description" class="form__input">{{product.description}}</textarea>
              <p class="form__prompt">Displayed in the product card</p>
            </div>
            <div class="form__buttons">
              <button class="form__button form__button-update">Save updates product</button>
              <a class="form__button form__button-delete" href="/product-delete?id={{product.id}}">Delete
                product</a>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </section>

</main>
