<main>

  <section>
    <div class="form">
      <h1 class="form__title">Create Product</h1>
      <form method="POST" action="/product-create">
        <fieldset>
          <legend class="form__name">Product information</legend>
          <div class="form__content">
            <div class="form__field">
              <div>
                <label for="name" class="form__label">Name:</label>
                <input type="text" name="name" id="name" class="form__input">
              </div>
              <div>
                <label for="price" class="form__label">Price:</label>
                <input type="number" name="price" id="price" class="form__input">
              </div>
            </div>
            <div class="form__field">
              <label for="description" class="form__label">Description:</label>
              <textarea name="description" id="description" class="form__input"></textarea>
              <p class="form__prompt">Displayed in the product card</p>
            </div>
            <button class="form__button">Create product</button>
          </div>
        </fieldset>
      </form>
    </div>
  </section>

</main>
