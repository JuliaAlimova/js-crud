<div class="heading">
    {{#if title}}
    <h1 class="heading__title  {{#if small}}heading__title-small{{/if}} {{#if center}}heading__title-center{{/if}}">
        {{title}}</h1>
    {{/if}}
    {{#if info}}
    <p class="heading__info {{#if center}}heading__info-center{{/if}}">{{info}}</p>
    {{/if}}
</div>